@model Book.Models.Books
@{
    ViewBag.Title = "Удаление книги";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Год выпуска</dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>Идентификатор автора</dt>
        <dd>
            @Html.DisplayFor(model => model.AuthorId)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>